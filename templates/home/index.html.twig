{% extends 'base.html.twig' %}

{% block title %}STEAMISH{% endblock %}

{% block body %}

    <div class="container">

        <div class="bg-dark mt-4 p-3">
            <h3 class="text-white">Featured Games</h3>
            <div class="row d-flex justify-content-evenly">
                {% for game in displayGamesByName %}
                    <div class="card mt-3" style="width: 15rem;">
                        <div class="position-relative">
                            <img src="{{ game.thumbnailCover }}" class="card-img-top" alt="logo">
                            <div class="position-absolute bottom-0 end-0 bg-warning p-2">{{ game.price }}€</div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ game.name }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="bg-dark mt-5 p-3">
            <h3 class="text-white">New Releases</h3>
            <div class="row d-flex justify-content-evenly">
                {% for game in displayGamesByReleaseDate %}
                    <div class="card mt-3" style="width: 15rem;">
                        <div class="position-relative">
                            <img src="{{ game.thumbnailCover }}" class="card-img-top" alt="logo">
                            <div class="position-absolute bottom-0 end-0 bg-warning p-2">{{ game.price }}€</div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ game.name }}</p>
                            <p class="card-text bg-warning p-1">Released: {{ game.publishedAt|date ('d-m-Y') }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="bg-dark mt-5 p-3">
            <h3 class="text-white">Latest Comments</h3>
            <div class="row d-flex justify-content-evenly">
                {% for comment in displayLatestComments %}
                    <div class="card mt-3" style="width: 15rem;">
                        <div class="card-body">
                            <p class="card-text text-center">{{ comment.content }}</p>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ comment.account.nickname }}

                            </h6>
                            <h6 class="card-subtitle mb-2 text-muted">{{ comment.createdAt|date ('d-m-Y H:i') }}</h6>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="bg-dark mt-5 p-3">
            <h3 class="text-white">Most Played Games</h3>
